<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/codCelular_crear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Serie del celular"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/nombreCelular_crear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Nombre del Celular"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/numeroCamaras_crear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Numero de camaras del Celular"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/fechaFabricacion_crear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Fecha de Fabricación  del Celular (yyyy-mm-dd)"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/dobleLinea_crear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Doble Linea (Sí o No)"
        android:textSize="16sp" />

</LinearLayout>